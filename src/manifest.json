{
  "name": "HERP Hire recommend",
  "description": "HERP HireのWebサイトを拡張します",
  "version": "0.0.1",
  "icons": {
    "128": "icon/icon128.png"
  },
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "https://*.v1.herp.cloud/*"
      ],
      "all_frames": true,
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options_page/index.html",
  "web_accessible_resources": []
}
